.blog

	.embed
		z-index 5
		position relative
		margin 24px 0
		text-align center

	p:after
		content "»"
		color $brand-primary
		padding-left 3px

	.content,
	.quote,
	.meta
		display table
		position relative
		z-index 5
		height 100%
		margin calc(5% - 50px) 5% 5%
		color $gray-lighter
		.center
			display table-cell
			vertical-align middle

	.meta
		text-align center
		margin 24px auto
		float none
		h1
			font-size $font-size-title
			color $white
		time
			slab(20px)
		i
			font-size 16px
			margin-right 5px

	h1
		margin-top: 0
		font-weight 600
		color $brand-primary
	p
		font-size 20px
		margin-bottom 0

	.quote
		slab(41px, 500)
		padding-left 42px

		&:before,
		&:after
			color $brand-primary
			sans_serif(65px, 700)
			line-height: 20px

		&:before
			content "“"
			display inline-block
			width 18px
			margin 0 3px 0 -21px

		&:after
			content "”"
			margin-left 3px


	.attribution
		position absolute
		bottom 0
		right 0
		z-index 5
		color $gray
		font-size 10px
		max-width 12%
		padding 5px 7px
		& a
			color $gray
		&:hover,
		& a:hover
			color $gray-lighter

	dl
		slab(20px)
		display inline
		margin-left 17px
	dt
		font-weight normal
		display inline
	dt + dt:before
		content: ','
		margin-right 5px

.content-list
	display table
	padding 0

	.has-img .desc
		transition ease 0.3s max-height,
		           ease 0.3s margin-bottom
		overflow hidden
		max-height 0
		margin 0
	.has-img:hover .desc
		max-height 120px
		margin-bottom 12.5px
	.has-img:hover figure
		max-height 0

	.video
		figure
			position relative
		figure:before
			content ''
			background url(http://www.detroitgardenworks.com/wp-content/themes/striking/images/image_icon_play.png) 50% 50% no-repeat
			position absolute
			top 0
			bottom 0
			left 0
			right 0

	article
		transition 0.15s border-color,
		           0.15s margin-bottom
		border-bottom 2px solid $white
		&:hover
			border-color $brand-primary
			cursor pointer

	figure
		background-size cover
		background-color $gray-darker
		background-position 50% 50%
		display block
		height 120px
		max-height 120px
		width calc(100% + 48px)
		margin 0 -24px
		transition ease 0.3s max-height

	.row
		display table-row

	.row + .row article
		border-top 1px solid $gray-lighter

	.col
		padding-left  24px
		padding-right 24px
		display table-cell
		float none
		vertical-align top

	.col + .col
		border-left 1px solid $gray-lighter

	.quote
		p
			padding-left 12px

			&:before,
			&:after
				color $brand-primary
				sans_serif(28px)
				line-height 27px

			&:before
				content "“"
				display inline-block
				width 9px
				margin 0 3px 0 -12px

			&:after
				content "”"
				margin-left 3px

	h5
		font-size 13px
		font-weight 600
		text-transform uppercase
		color $brand-primary


.post
	margin 24px auto
	max-width 820px

	p
		font-size 20px
		margin-bottom 24px

	.excerpt
		slab(24px)
		font-style italic
		color $gray-darker

		&:after
			content ''
			display block
			border-top 1px solid $gray-lighter
			width 35%
			margin 24px auto 36px