.feature .blog
	p:after
		content "»"
		color $brand-primary
		padding-left 3px

	.content,
	.quote
		position relative
		z-index 5
		padding 62px 24px 24px
		color $gray-lighter

	h1
		margin-top: 0
		font-weight 600
		color $brand-primary
	p
		font-size 20px
		margin-bottom 0

	.quote
		slab(41px, 500)
		padding-left 42px

		&:before,
		&:after
			color $brand-primary
			sans_serif(65px, 700)
			line-height: 20px

		&:before
			content "“"
			display inline-block
			width 18px
			margin 0 3px 0 -21px

		&:after
			content "”"
			margin-left 3px


	.attribution
		position absolute
		bottom 0
		right 0
		color $gray
		font-size 10px
		padding 5px 7px
		&:hover
			color $gray-lighter

.content-list
	display table

	.row
		display table-row

	.row + .row
		border-top 1px solid $gray-lighter

	.col
		padding-left  24px
		padding-right 24px
		display table-cell
		float none

	.col + .col
		border-left 1px solid $gray-lighter

	.quote
		p
			padding-left 12px

			&:before,
			&:after
				color $brand-primary
				sans_serif(28px)
				line-height 27px

			&:before
				content "“"
				display inline-block
				width 9px
				margin 0 3px 0 -12px

			&:after
				content "”"
				margin-left 3px

	h5
		font-weight 600
		text-transform uppercase
		color $brand-primary